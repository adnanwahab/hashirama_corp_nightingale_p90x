{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "routes": [
            {
              "match": [
                {
                  "host": ["robot.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "file_server",
                  "root": "/home/adnan/hashirama/services/bot-party/dist"
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["photos.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "0.0.0.0:2283"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["jellyfin.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "0.0.0.0:8096"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["map.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "0.0.0.0:6000"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["jupyter.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "ubuntu:8888"
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["static.hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "file_server",
                  "root": "/home/adnan/hashirama/services/static"
                }
              ],
              "terminal": true
            },
            {
              "match": [
                {
                  "host": ["hashirama.blog"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "0.0.0.0:1337"
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ],
          "tls_connection_policies": [
            {
              "match": {
                "sni": [
                  "robot.hashirama.blog",
                  "photos.hashirama.blog",
                  "jellyfin.hashirama.blog",
                  "map.hashirama.blog",
                  "jupyter.hashirama.blog",
                  "static.hashirama.blog",
                  "hashirama.blog"
                ]
              }
            }
          ]
        }
      }
    },
    "tls": {
      "certificates": {
        "automate": [
          "robot.hashirama.blog",
          "photos.hashirama.blog",
          "jellyfin.hashirama.blog",
          "map.hashirama.blog",
          "jupyter.hashirama.blog",
          "static.hashirama.blog",
          "hashirama.blog"
        ]
      }
    }
  }
}
